<div class="table-wrapper col-lg-6 center">
  <div class="table-title">
    <div class="row">
      <div class="col">
        <h2>Signup</h2>
      </div>
    </div>
  </div>
  <div class="form-wrapper">  
    {{#if success_message }}
      <div class="alert alert-success">{{success_message}}</div>
    {{/if}}
    {{#if error_message}}
      <div class="alert alert-danger">{{error_message}}</div>
    {{/if}}

  <form action="/signup" method="POST">
    <div class="form-group">
       {{#if errors.firstName}}
          <span class="red">  {{errors.firstName.msg}} </span>
        {{/if}}
      <input type="text" name="firstName" value="{{users.firstName}}" class="form-control" id="firstName" placeholder="First Name">
    </div>

    <div class="form-group">
        {{#if errors.lastName}}
          <span class="red">  {{errors.lastName.msg}} </span>
        {{/if}}      
        <input type="text" name="lastName" value="{{users.lastName}}" class="form-control" id="country" placeholder="Last Name">
    </div>
 
    <div class="form-group">
          {{#if errors.username}}
            <span class="red">  {{errors.username.msg}} </span>
          {{/if}}
      <input type="text" name="username" value="{{users.username}}" class="form-control" id="username" placeholder="Username">
    </div>

    <div class="form-group">
        {{#if errors.email}} 
          <span class="red"> {{ errors.email.msg }} </span>
        {{/if}}
      <input type="email" name="email" value="{{users.email}}" class="form-control" id="email" placeholder="Enter a valid email">
    </div>

    <div class="form-group">
          {{#if errors.password}}
            <span class="red">  {{errors.password.msg}} </span>
          {{/if}}
      <input type="password" name="password" value="{{users.password}}" class="form-control" id="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary"> Signup </button>
  </form>
  </div>
</div>