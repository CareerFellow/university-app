<div class="banner-img" style="background-image: url('/images/public-images/university-detail-banner.jpg')">
  <div class="col-sm-11 col-sm-offset-1" style="align-self: center; margin: auto">
    <div class="img-thumbnail university-logo">
      <img src="{{university.logo}}" alt="">
    </div>
    <div>
      <span>
        <h1 style="margin-bottom: 0px; margin-top: 25px">{{university.universityName}}</h1>
        <p style="margin-bottom: 0px">{{university.address}} , {{university.city}}</p>
        <p style="margin-bottom: 0px">{{university.website}}</p>
        <p style="margin-bottom: 0px">{{university.email}}</p>
      </span>
    </div>
  </div>
</div>

<div class="container">
  <h3 style="margin-top: 40px"> About {{university.universityName}} </h3>
  <p>{{university.about}}
  </p>
  <hr>
  <h4> Undergraduate programs offered at University</h4>
  <div class="row">
    {{#each university.programs}}
    <div class="col-md-6" style="margin-bottom: 12px">
      <a href="/program/{{../university._id}}/{{this._id}}"> {{this.programName}} </a>
      <div> Deadline : {{dateFormat this.applicationDate "MMMM Do, YYYY"}} </div>
    </div>
    {{/each}}

  </div>
</div>