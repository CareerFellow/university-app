<div class="banner-img short" style="background-image: url('/images/public-images/university-header.jpg'); height: 400px;">
  <div class="col-sm-11 col-sm-offset-1" style="align-self: center; margin: auto">

    <div class="row banner-search">

      <div class="col-sm-9">
        <div class="form-group">
          <form method="POST" action="/universities">
            <input name="universitySearch" id="universitySearch" placeholder="Enter program keyword to find relevant University e.g Arts or Business"
              class="form-control input-lg">
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <button type="submit" class="btn btn-lg btn-search"> SEARCH UNIVERSITIES</button>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="my-3 my-md-5">
  <div class="container">
    <div class="page-title">
      <h1> Universities in Pakistan </h1>
      <h5> Read Universities, courses, eligibility and more</h5>
    </div>
    <hr>

    <div class="row row-cards row-deck">
      {{#each universities}}
      <div class="col-lg-6">
        <div class="card card-aside">
          <div class="card-img">
            <img src="{{this.logo}}" height="160px" class="university-logo" alt="">
          </div>
          <div class="card-body d-flex flex-column">
            <h4>
              <a href="/university/{{this._id}}">{{this.universityName}}</a>
            </h4>
            <span> {{this.address}}, {{this.city}} </span>
            <br>
            <span> Private University </span>
            <span> 47% acceptance rate </span>
            <a href="/university/{{this._id}}"> View Details</a>
          </div>
        </div>
      </div>
      {{else}}
      <div class="red">No record found.</div>
      {{/each}}

    </div>
  </div>
</div>