<div class="container">
  <div class="row">
    <div class="col-12 card">
      <div class="card-header">
        <h3 class="card-title"> Manage Universities </h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table card-table table-vcenter text-nowrap">
            <thead>
              <tr>
                <th class="w-1">NO.</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>Contact</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>


            {{#unless noRecord }}

            <tbody>
              {{#each allUniversities}}
              <tr>
                <td> {{inc @index}}</td>
                <td>
                  <a href="university/{{this._id}}"> {{this.universityName}} </a>
                </td>
                <td>{{this.address}}</td>
                <td>{{this.city}}</td>
                <td>{{this.country}}</td>
                <td>{{this.contact}}</td>
                <td class="w-1">
                  <a href="" class="btn btn-secondary btn-sm"> View Programs </a>
                </td>
                <td class="w-1">
                  <a href="/admin/university/update/{{this._id}}" class="icon">
                    <i class="fe fe-edit"></i>
                  </a>
                </td>
                <td>
                  <a href="/admin/university/delete/{{this._id}}" class="icon">
                    <i class="fe fe-delete"></i>
                  </a>
                </td>
              </tr>
              {{/each}}
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>Contact</th>
                <th colspan="3">Actions</th>
              </tr>
            </tbody>
            {{/unless}}
          </table>
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex">
          <ul class="pagination pagination-pager" style="margin-bottom: 0px">
            {{#if pages }} {{#each pages }}
            <li class="page-item">
              <a href="{{this.url}}" class="page-link"> {{this.number}} </a>
            </li>
            {{/each}} {{/if}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>