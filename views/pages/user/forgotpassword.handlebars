<div class="container">
  <div class="row">
    <div class="col col-login mx-auto">
      <div class="text-center mb-6">
        <img src="./demo/brand/tabler.svg" class="h-6" alt="">
      </div>

      {{#if success_message }}
      <div class="alert alert-success">{{success_message}}</div>
      {{/if}} {{#if error_message}}
      <div class="alert alert-danger">{{error_message}}</div>
      {{/if}}
      <form class="card" action="" method="post">

        <div class="card-body p-6">
          <div class="card-title">Forgot password</div>
          <p class="text-muted">Enter your username and password to reset.</p>
          <div class="form-group">
            {{#if errors.username}}
            <span class="red"> {{errors.username.msg}} </span>
            {{/if}}
            <label class="form-label" for="username">Username</label>
            <input type="text" name="username" value="{{users.username}}" class="form-control" id="username" placeholder="Username">
          </div>
          <div class="form-group">
            {{#if errors.password}}
            <span class="red"> {{errors.password.msg}} </span>
            {{/if}}
            <label class="form-label" for="password">Password</label>
            <input type="password" name="password" value="{{users.password}}" class="form-control" id="password" placeholder="Password">
          </div>
          <div class="form-footer">
            <button type="submit" class="btn btn-primary btn-block">Update Password</button>
          </div>
        </div>
      </form>
      <div class="text-center text-muted">
        Forget it,
        <a href="/admin/signin">send me back</a> to the sign in screen.
      </div>
    </div>
  </div>
</div>