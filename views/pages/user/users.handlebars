<div class="container">
  <div class="row">
    <div class="col-12 card">
      <div class="card-header">
        <h3 class="card-title"> Manage Users </h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table card-table table-vcenter text-nowrap">
            <thead>
              <tr>
                <th class="w-1">NO.</th>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Status</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#each users}}
              <tr>
                <td> {{inc @index}} </td>
                <td> {{this.firstName}} </td>
                <td> {{this.username}} </td>
                <td> {{this.email}} </td>
                <td> {{#if this.isVerified}} Active {{else}} Inactive{{/if}}</td>
                <td class="w-1">
                  <a href="" class="icon">
                    <i class="fe fe-edit"></i>
                  </a>
                </td>
                <td>
                  <a href="" class="icon">
                    <i class="fe fe-delete"></i>
                  </a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex">
          <ul class="pagination pagination-pager" style="margin-bottom: 0px">
             {{#if pages }} {{#each pages }}
            <li class="page-item">
              <a href="{{this.url}}" class="page-link"> {{this.number}} </a>
            </li>
            {{/each}} {{/if}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>