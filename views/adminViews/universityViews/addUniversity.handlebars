<div class="table-wrapper col-lg-6 center">
  <div class="table-title">
    <div class="row">
      <div class="col">
        <h2>Add University</h2>
      </div>
      <div class="col">
        <a href="/university" class="btn btn-success"> View All</a>
      </div>
    </div>
  </div>
  <div class="form-wrapper">
    {{#if success_message }}
    <div class="alert alert-success">{{success_message}}</div>
    {{/if}} {{#if error_message}}
    <div class="alert alert-danger">{{error_message}}</div>
    {{/if}}
    <form action="/admin/university/add" method="POST" enctype="multipart/form-data" id="addUniversityForm">
      <div class="form-group">
        <label for="universityName"> University Name</label>
        {{#if errors.universityName}}
        <span class="red"> {{errors.universityName.msg}} </span>
        {{/if}}
        <input type="text" name="universityName" value="{{university.universityName}}" class="form-control" id="universityName">
      </div>

      <div class="form-group">
        <label for="universityLogo"> University Logo</label>
        {{#if logoError }}
        <span class="red"> {{logoError}} </span>
        {{/if}}
        <input type="file" name="universityLogo" value="{{university.universityLogo}}" class="form-control" id="universityLogo">
      </div>

      <div class="form-group">
        <label for="address">Wesbite</label>
        {{#if errors.website}}
        <span class="red"> {{errors.website.msg}} </span>
        {{/if}}
        <input type="text" name="website" value="{{university.website}}" class="form-control" type="url" id="address">
      </div>

      <div class="form-group">
        <label for="address">Email</label>
        {{#if errors.email}}
        <span class="red"> {{errors.email.msg}} </span>
        {{/if}}
        <input type="text" name="email" value="{{university.email}}" class="form-control" id="email">
      </div>

      <div class="form-group">
        <label for="address">About</label>
        {{#if errors.about}}
        <span class="red"> {{errors.about.msg}} </span>
        {{/if}}
        <input type="text" name="about" value="{{university.about}}" class="form-control" id="about">
      </div>

      <div class="form-group">
        <label for="address">Address</label>
        {{#if errors.address}}
        <span class="red"> {{errors.address.msg}} </span>
        {{/if}}
        <input type="text" name="address" value="{{university.address}}" class="form-control" id="address">
      </div>

      <div class="form-group">
        <label for="city">City</label>
        {{#if errors.city}}
        <span class="red"> {{errors.city.msg}} </span>
        {{/if}}
        <input type="text" name="city" value="{{university.city}}" class="form-control" id="city">
      </div>

      <div class="form-group">
        <label for="country">Country</label>
        {{#if errors.country}}
        <span class="red"> {{errors.country.msg}} </span>
        {{/if}}
        <input type="text" name="country" value="{{university.country}}" class="form-control" id="country">
      </div>

      <div class="form-group">
        <label for="contact">Contact</label>
        {{#if errors.contact}}
        <span class="red"> {{errors.contact.msg}} </span>
        {{/if}}
        <input type="text" name="contact" value="{{university.contact}}" class="form-control" id="contact">
      </div>

      <button type="submit" class="btn btn-primary"> Submit </button>
    </form>
    <script src="../../js/formValidation/addUniversity.js"></script>
  </div>
</div>